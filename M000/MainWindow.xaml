<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen" Topmost="True"
		FontSize="14" SizeToContent="Height" ResizeMode="NoResize">
	<Window.Background>
		<LinearGradientBrush>
			<GradientStop Offset="0" Color="Aqua"/>
			<GradientStop Offset="1" Color="Yellow"/>
		</LinearGradientBrush>
	</Window.Background>
	<Window.Resources>
		<Style TargetType="UniformGrid">
			<Setter Property="Columns" Value="2"/>
			<Setter Property="Margin" Value="0, 0, 0, 5"/>
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</Window.Resources>
    <StackPanel Margin="5">
		<UniformGrid>
			<TextBlock Text="Vorname: "/>
			<TextBox />
		</UniformGrid>
		<UniformGrid>
			<TextBlock Text="Nachname: "/>
			<TextBox />
		</UniformGrid>
		<UniformGrid>
			<TextBlock Text="Geburtsdatum: "/>
			<DatePicker/>
		</UniformGrid>
		<UniformGrid>
			<TextBlock Text="Verheiratet: "/>
			<CheckBox />
		</UniformGrid>
		<UniformGrid>
			<TextBlock Text="Lieblingsfarbe: "/>
			<ComboBox>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Blau" Foreground="Blue"/>
				<ComboBoxItem Content="Grün" Foreground="Green"/>
				<ComboBoxItem Content="Gelb" Foreground="Yellow"/>
			</ComboBox>
		</UniformGrid>
		<UniformGrid>
			<TextBlock Text="Geschlecht: " Style="{x:Null}"/>
			<StackPanel>
				<RadioButton Content="M" GroupName="G"/>
				<RadioButton Content="W" GroupName="G"/>
				<RadioButton Content="D" GroupName="G"/>
			</StackPanel>
		</UniformGrid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="100" Margin="0, 0, 2.5, 0"/>
			<Button Content="Abbrechen" Width="100" Margin="2.5, 0, 0, 0"/>
		</StackPanel>
	</StackPanel>
</Window>
