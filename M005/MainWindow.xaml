<Window x:Class="M005.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:M005"
        Title="MainWindow" Height="450" Width="800"
		WindowStartupLocation="CenterScreen" Topmost="True" FontSize="20"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">
	<StackPanel Margin="10">
		<!--DataBinding-->
		<!--Binding an Backend Properties-->
		<!--WICHTIG: Backend Variablen müssen Properties sein-->
		
		<!--DataContext-->
		<!--Gibt dem Bindingsystem vor, in welchem Objekt sich die Daten befinden, die gebunden werden sollen-->
		<!--Kann auch das gesamte MainWindow-Objekt enthalten-->
		
		<!--2 Optionen für Selbstbindung: -->
		<!--this.DataContext = this;-->
		<!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->
		<TextBlock Text="{Binding Path=Counter}"/>
		<Button Content="Counter++" Click="Button_Click"/>
		
		<!--ObservableCollection-->
		<ListBox ItemsSource="{Binding Path=Zahlen}"/>
	</StackPanel>
</Window>
