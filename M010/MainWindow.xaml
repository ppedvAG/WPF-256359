<Window x:Class="M010.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:M010"
        Title="MainWindow" Height="450" Width="800"
		WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel>
		<!--Trigger-->
		<!--Style mit Bedingung-->
		
		<!--Trigger-->
		<!--Interagiert immer nur mit sich selbst (mit der GUI-Komponente)-->
		<TextBlock Text="Hallo Welt" FontSize="30">
			<TextBlock.Style>
				<!--WICHTIG: TargetType angeben-->
				<Style TargetType="TextBlock">
					<Style.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Foreground" Value="Blue"/>
							<Setter Property="TextDecorations" Value="Underline"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</TextBlock.Style>
		</TextBlock>
		
		<!--MultiTrigger-->
		<!--Identisch zum normalen Trigger, aber mit mehreren Bedingungen-->
		<TextBlock Text="Hallo Welt" FontSize="30" Name="TB">
			<TextBlock.Style>
				<!--WICHTIG: TargetType angeben-->
				<Style TargetType="TextBlock">
					<Style.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition Property="IsMouseOver" Value="True"/>
								<Condition Property="FontSize" Value="40"/>
							</MultiTrigger.Conditions>
							<MultiTrigger.Setters>
								<Setter Property="Foreground" Value="Blue"/>
								<Setter Property="TextDecorations" Value="Underline"/>
							</MultiTrigger.Setters>
						</MultiTrigger>
					</Style.Triggers>
				</Style>
			</TextBlock.Style>
		</TextBlock>
		<Button Click="Button_Click" Content="FontSize++"/>
		
		<!--DataTrigger-->
		<!--Funktioniert wie der normale Trigger, aber muss ein Binding enthalten-->
		<CheckBox Content="Button anzeigen" Name="BA"/>

		<Button Content="Button ist jetzt sichtbar" Visibility="Collapsed">
			<Button.Style>
				<Style TargetType="Button">
					<Style.Triggers>
						<!--Dieser Trigger funktioniert nicht, weil der Style deaktiviert wird, wenn der Button unsichtbar ist-->
						<DataTrigger Binding="{Binding ElementName=BA, Path=IsChecked}" Value="True">
							<Setter Property="Visibility" Value="Visible"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>

		<Button Content="Button ist jetzt sichtbar">
			<Button.Style>
				<Style TargetType="Button">
					<!--Wenn die Visibility im Style selbst gesetzt wird, wird das ganze funktionieren-->
					<Setter Property="Visibility" Value="Collapsed"/>

					<Style.Triggers>
						<DataTrigger Binding="{Binding ElementName=BA, Path=IsChecked}" Value="True">
							<Setter Property="Visibility" Value="Visible"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
		
		<!--Selbiges Problem mit IsEnabled-->
		<CheckBox Content="Button aktivieren" Name="Aktivieren"/>

		<Button Content="Button ist jetzt aktiviert">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>
					
					<Style.Triggers>
						<DataTrigger Binding="{Binding ElementName=Aktivieren, Path=IsChecked}" Value="True">
							<Setter Property="IsEnabled" Value="True"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>
		
		<!--MultiDataTrigger-->
		<!--Selbiges wie der MultiTrigger, aber mit mehreren Bindings-->
		<CheckBox Content="Button aktivieren 1" Name="BA1"/>
		<CheckBox Content="Button aktivieren 2" Name="BA2"/>
		<CheckBox Content="Button aktivieren 3" Name="BA3"/>

		<Button Content="Button ist jetzt aktiviert">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>

					<Style.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>

		<!--2 von 3-->
		<Button Content="Button ist jetzt aktiviert">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="False"/>

					<Style.Triggers>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>

						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA1, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>

						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=BA2, Path=IsChecked}" Value="True"/>
								<Condition Binding="{Binding ElementName=BA3, Path=IsChecked}" Value="True"/>
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="True"/>
						</MultiDataTrigger>
					</Style.Triggers>
				</Style>
			</Button.Style>
		</Button>

		<!--EventTrigger-->
		<TextBlock Text="TextBoxHover">
			<TextBlock.Triggers>
				<EventTrigger RoutedEvent="MouseEnter">
					<EventTrigger.Actions>
						<BeginStoryboard>
							<!--StoryBoard-->
							<!--Für Animationen-->
							<Storyboard>
								<DoubleAnimation Duration="0:0:3" Storyboard.TargetProperty="FontSize" To="100"/>
							</Storyboard>
						</BeginStoryboard>
					</EventTrigger.Actions>
				</EventTrigger>
			</TextBlock.Triggers>
		</TextBlock>

	</StackPanel>
</Window>
