<UserControl x:Class="M011.ColorSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M011"
			 Name="Self">
	<UserControl.Resources>
		<local:ColorToBrushConverter x:Key="CBC"/>
	</UserControl.Resources>
	<DockPanel Margin="0, 0, 0, 5">
		<!--WICHTIG: DataContext eines UserControls darf niemals es selbst sein-->
		<!--Nicht erlaubt: DataContext="{Binding RelativeSource={RelativeSource Self}}", this.DataContext = this;-->
		<!--Warum? Weil Bindings die außerhalb des UC (in ColorPicker) definiert werden, dann innerhalb des UC gesucht werden-->
		<!--Lösung: Name-->
		<TextBlock Text="{Binding ElementName=Self, Path=Text}" Foreground="{Binding ElementName=Self, Path=TextColor, Converter={StaticResource CBC}}" Width="15" DockPanel.Dock="Left"/>
		<TextBox Text="{Binding ElementName=Slider, Path=Value}" TextAlignment="Center" Width="40" DockPanel.Dock="Right"/>
		<Slider Minimum="0" Maximum="255" Value="{Binding ElementName=Self, Path=SliderValue}" Name="Slider" Margin="2, 0" TickFrequency="1" IsSnapToTickEnabled="True"/>
	</DockPanel>
</UserControl>
